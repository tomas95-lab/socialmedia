{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class = "flex items-center items-center justify-center h-screen">
<div class="bg-white p-8 rounded-md shadow-md w-96">
        <form action = '{{path("app_formulario")}}' method = "POST" >
            <div class="mb-4">
                <label for="inputTexto" class="block text-gray-700 text-sm font-bold mb-2">Nombre de usuario</label>
                <input type="text" id="inputTexto" name="nombre" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" placeholder="Ingrese su nombre">
            </div>
            <button type="submit" class="w-full bg-blue-500 text-white font-bold py-2 px-4 rounded-md">Enviar</button>
        </form>
    </div>
</div>

{% endblock %}
